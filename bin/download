#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "${ASDF_DOWNLOAD_PATH}"

platform="$(uname | tr '[:upper:]' '[:lower:]')"
arch="$(uname -m)"
extension=""

case "$arch" in
# Match the goreleaser arch conventions
"x86_64")
  arch="amd64"
  ;;
esac

case "$platform" in
"darwin")
  extension=".dmg"
  ;;
msys* | cygwin* | mingw* | nt | win*)
  extension=".exe"
  ;;
esac

filename="aws-vault-${platform}-${arch}${extension}"
output_filename="${ASDF_DOWNLOAD_PATH}/${filename}"

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_VERSION" "$filename" "$output_filename"

if [ "${extension}" == ".dmg" ]; then
  hdiutil mount -quiet -mountpoint "${ASDF_DOWNLOAD_PATH}/tmp_dmg" "${ASDF_DOWNLOAD_PATH}"
  cp "${ASDF_DOWNLOAD_PATH}/tmp_dmg/aws-vault" "${output_filename}"
  hdiutil unmount -quiet "${ASDF_DOWNLOAD_PATH}/tmp_dmg"
else
  chmod +x "${output_filename}"
fi

rm "${output_filename}"
